<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= ejsDay %>
        </h1>
    </div>

    <div class="box">

        <% itemList.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%=ejsDay%>"></input>
            </form>
            <% }) %>

                <form class="item" action="/" method="post">
                    <input type="text" name="var1" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="list" value="<%= ejsDay %>">+</button>
                </form>
    </div>

    <%- include("footer") -%>